<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tigerware.a70percent.MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="463dp"
        android:orientation="vertical"

        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/nextGameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:text="Следующая игра:"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/startDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nextGameTextView"
            android:paddingTop="30dp"
            android:text="Начало:"
            android:textColor="#000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="137dp" />

        <TextView
            android:id="@+id/endDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/startDateTextView"
            android:layout_alignStart="@+id/startDateTextView"
            android:layout_below="@+id/startDateTextView"
            android:paddingTop="30dp"
            android:text="Конец:"
            android:textColor="#000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="188dp" />

        <TextView
            android:id="@+id/StageAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/startDateTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/startDateTextView"
            android:layout_below="@+id/endDateTextView"
            android:paddingTop="30dp"
            android:text="Этапов:"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="188dp" />

        <Button
            android:id="@+id/StartGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.05"
            android:onClick="GameActivityButtonClick"
            android:paddingTop="30dp"
            android:text="Начать"
            android:textAlignment="center"
            android:textSize="24sp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

